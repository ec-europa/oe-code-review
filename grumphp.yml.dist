parameters:
  ascii:
    failed: ~
    succeeded: ~
  tasks:
    git_commit_message:
      matchers:
        - '/^#\d+: [A-Z].+\./'
      case_insensitive: false
      multiline: false
    # PHP Code Sniffer.
    phpcs:
      standard: vendor/drupal/coder/coder_sniffer/Drupal/
      ignore_patterns:
       - vendor/
      triggered_by:
       - php
